{
  "name": "kirby-esbuild-starter",
  "version": "1.0.0",
  "description": "Kirby CMS starter with esbuild for bundling",
  "main": "index.js",
  "scripts": {
    "build:jsmain": "esbuild src/js/main.js --bundle --minify --outfile=assets/js/main.js",
    "watch:jsmain": "esbuild src/js/main.js --bundle --watch=forever --sourcemap=inline --outfile=assets/js/main.js",
    "build:jstemplates": "esbuild src/js/templates/** --bundle --minify --outdir=assets/js/templates/",
    "watch:jstemplates": "esbuild src/js/templates/** --bundle --watch=forever --sourcemap=inline --outdir=assets/js/templates/",
    "build:cssmain": "esbuild src/css/main.css --bundle --minify --outfile=assets/css/main.css",
    "watch:cssmain": "esbuild src/css/main.css --bundle --watch=forever --sourcemap=inline --outfile=assets/css/main.css",
    "build:csstemplates": "esbuild src/css/templates/** --bundle --minify --outdir=assets/css/templates/",
    "watch:csstemplates": "esbuild src/css/templates/** --bundle --watch=forever --sourcemap=inline --outdir=assets/css/templates/",
    "browsersync": "browser-sync start --proxy 'kirby-esbuild-starter.test' --files 'assets/**/*.css' 'site/**/*.php' 'site/**/**/*.php' --no-open --no-notify --no-inject-changes",
    "build": "npm run build:jsmain & npm run build:jstemplates & npm run build:cssmain & npm run build:csstemplates",
    "dev": "npm run watch:jsmain & npm run watch:jstemplates & npm run watch:cssmain & npm run watch:csstemplates & npm run browsersync",
    "push-content": "rsync -aziv --delete --exclude='*.DS_Store' ./content/ ftpuser@server:directory/content/",
    "push-content-dry": "rsync -anziv --delete --exclude='*.DS_Store' ./content/ ftpuser@server:directory/content/",
    "push-vendor": "rsync -aziv --delete --exclude='*.DS_Store' ./vendor/ ftpuser@server:directory/vendor/",
    "push-vendor-dry": "rsync -anziv --delete --exclude='*.DS_Store' ./vendor/ ftpuser@server:directory/vendor/",
    "push-assets": "rsync -aziv --delete --exclude='*.DS_Store' ./assets/ ftpuser@server:directory/assets/",
    "push-assets-dry": "rsync -anziv --delete --exclude='*.DS_Store' ./assets/ ftpuser@server:directory/assets/",
    "push-templates": "rsync -aziv --delete --exclude='*.DS_Store' --exclude='accounts' --exclude='cache' --exclude='config' --exclude='plugins' --exclude='sessions' ./site/ ftpuser@server:directory/site/",
    "push-templates-dry": "rsync -anziv --delete --exclude='*.DS_Store' --exclude='accounts' --exclude='cache' --exclude='config' --exclude='plugins' --exclude='sessions' ./site/ ftpuser@server:directory/site/",
    "pull-content": "rsync -aziv --delete ftpuser@server:directory/content/ ./content/",
    "pull-content-dry": "rsync -anziv --delete ftpuser@server:directory/content/ ./content/",
    "pull-assets": "rsync -aziv --delete ftpuser@server:directory/assets/ ./assets/",
    "pull-assets-dry": "rsync -anziv --delete ftpuser@server:directory/assets/ ./assets/"
  },
  "keywords": [],
  "author": "Mrityunjay Marol",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "browser-sync": "^3.0.2",
    "cssnano": "^6.1.2",
    "esbuild": "^0.20.2",
    "parcel": "^2.12.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^12.1.1"
  }
}
